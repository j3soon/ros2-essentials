/* Reference: https://aka.ms/devcontainer.json */
{
    "name": "ROS 2 Development Container",
    "dockerComposeFile": "../docker/docker-compose.yaml",
    "service": "ros2-slam-toolbox",

    // workspace settings
    "workspaceFolder": "/home/ros2-agv-essentials/slam_toolbox_ws",

    // Vscode extensions
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    
    // Lifecycle scripts
    "postCreateCommand": "${containerWorkspaceFolder}/.devcontainer/postCreateCommand.sh"
}