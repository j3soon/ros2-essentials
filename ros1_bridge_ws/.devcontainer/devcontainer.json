/* Reference: https://aka.ms/devcontainer.json */
{
    "name": "Ros1 Bridge",
    "dockerComposeFile": "../docker/compose.debug.yaml",
    "service": "ros1-bridge-build",
    "runServices": [
        "ros1-bridge-build"
    ],
    // Set the USER_UID
    "initializeCommand": "\"${localWorkspaceFolder}\"/.devcontainer/create_env.sh",
    // Workspace settings
    "workspaceFolder": "/",
    // Vscode extensions
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "leojhonsong.python-extension-pack",
                "eamodio.gitlens",
                "mhutchie.git-graph",
                "streetsidesoftware.code-spell-checker",
                "ranch-hand-robotics.rde-pack"
            ]
        }
    }
}
